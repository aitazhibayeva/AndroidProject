<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    tools:context=".views.fragments.add.AddFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/incomeExpense_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/expenseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:text="Expense"
                    android:layout_weight="2"
                    android:background="@drawable/default_selector"/>

                <TextView
                    android:id="@+id/incomeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:text="Income"
                    android:layout_weight="2"
                    android:background="@drawable/default_selector"/>

            </LinearLayout>

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:text="Expense"
            android:textAlignment="center"
            android:textColor="#AF2828"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/solution"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/incomeExpense_layout" />

        <TextView
            android:id="@+id/solution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/payment_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total" />

        <LinearLayout
            android:id="@+id/payment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/spinnerDate">

                <TextView
                    android:id="@+id/cardBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="Card"
                    android:layout_weight="2"
                    android:background="@drawable/default_selector"/>

                <TextView
                    android:id="@+id/cashBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="Cash"
                    android:layout_weight="2"
                    android:background="@drawable/default_selector"/>

        </LinearLayout>

        <DatePicker
            android:id="@+id/spinnerDate"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/buttons_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_layout" />

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/category_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDate">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_1"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="1"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_2"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="2"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_3"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="3"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_divide"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple_200"
                    android:text="/"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_4"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="4"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_5"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="5"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_6"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="6"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_multi"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple_200"
                    android:text="x"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_7"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="7"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_8"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="8"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_9"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="9"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_plus"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple_200"
                    android:text="+"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_dot"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple_200"
                    android:text=","
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_0"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_delete"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple_200"
                    android:text="C"
                    android:textColor="@color/grey"
                    android:textSize="28dp"
                    app:cornerRadius="36dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_minus"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/purple_200"
                    android:text="-"
                    android:textColor="@color/grey"
                    android:textSize="25dp"
                    app:cornerRadius="36dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/button_categ_1"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/round_background"
                    android:gravity="center"
                    android:text="ðŸ½"
                    android:textSize="35sp"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/button_categ_2"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/round_background"
                    android:text="ðŸš—"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/button_categ_3"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/round_background"
                    android:text="ðŸŽ³"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/button_categ_4"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/round_background"
                    android:text="ðŸ‘•"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:padding="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/button_categ_5"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/round_background"
                    android:text="ðŸš´"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/button_categ_6"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/round_background"
                    android:text="ðŸ "
                    android:gravity="center"
                    android:textSize="35sp"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/button_categ_7"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/round_background"
                    android:text="ðŸ’°"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:padding="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_save"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#54189C"
                    android:text="SAVE"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:cornerRadius="36dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>